@model IEnumerable<BookingRequest>
@{
    var room = ViewBag.Room as Room;
}

<div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h2 class="text-3xl font-bold text-white flex items-center">
                <span class="text-purple-500 mr-2">@room.Code</span> Schedule
            </h2>
            <p class="text-slate-400 mt-1 flex items-center">
                <i data-lucide="users" class="w-4 h-4 mr-2"></i> Capacity: @room.Capacity
                <span class="mx-2 text-slate-700">|</span>
                @room.Notes
            </p>
        </div>
        <a asp-action="Create" asp-route-roomId="@room.Id" class="bg-purple-600 hover:bg-purple-500 text-white px-6 py-2.5 rounded-lg shadow-lg shadow-purple-900/20 transition font-medium flex items-center">
            <i data-lucide="plus" class="w-4 h-4 mr-2"></i> Book This Room
        </a>
    </div>

    <div class="bg-slate-900 border border-slate-800 rounded-xl overflow-hidden shadow-xl">
        <div class="px-6 py-4 border-b border-slate-800 bg-slate-950/50">
            <h3 class="font-bold text-slate-300 flex items-center">
                <i data-lucide="calendar-check" class="w-4 h-4 mr-2 text-purple-400"></i> Upcoming Approved Bookings
            </h3>
        </div>

        @if (!Model.Any())
        {
            <div class="p-12 text-center text-slate-500">
                <div class="bg-slate-800/50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="calendar-off" class="w-8 h-8 text-slate-600"></i>
                </div>
                <p>No upcoming bookings. This room is free!</p>
            </div>
        }
        else
        {
            <table class="w-full text-left">
                <thead class="bg-slate-950 text-xs uppercase text-slate-500 font-semibold border-b border-slate-800">
                    <tr>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4">Time</th>
                        <th class="px-6 py-4">Activity</th>
                        <th class="px-6 py-4">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-800">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-800/50 transition">
                            <td class="px-6 py-4 font-medium text-slate-200">
                                @item.Date.ToString("MMM dd, yyyy")
                            </td>
                            <td class="px-6 py-4 text-purple-400 font-medium font-mono text-sm">
                                @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                            </td>
                            <td class="px-6 py-4 text-slate-400">
                                @item.Purpose
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/20">
                                    Booked (@item.Attendees)
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="mt-8">
        <a asp-action="Index" class="text-slate-500 hover:text-purple-400 transition flex items-center">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i> Back to Room Directory
        </a>
    </div>
</div>